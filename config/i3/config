# resize window (you can also use the mouse for that)
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys and more drastic
        bindsym Left resize shrink width 15 px or 15 ppt
        bindsym Down resize grow height 15 px or 15 ppt
        bindsym Up resize shrink height 15 px or 15 ppt
        bindsym Right resize grow width 15 px or 15 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# adjust external monitors
mode "move" {
        # move workspace between monitors
        bindsym h move workspace to output left
        bindsym j move workspace to output down
        bindsym k move workspace to output up
        bindsym l move workspace to output right

        bindsym Left move workspace to output left
        bindsym Down move workspace to output down
        bindsym Up move workspace to output up
        bindsym Right move workspace to output right

        # switch to workspace (for convenience)
        bindsym 1 workspace $ws1
        bindsym 2 workspace $ws2
        bindsym 3 workspace $ws3
        bindsym 4 workspace $ws4
        bindsym 5 workspace $ws5
        bindsym 6 workspace $ws6
        bindsym 7 workspace $ws7
        bindsym 8 workspace $ws8
        bindsym 9 workspace $ws9
        bindsym 0 workspace $ws10

        # connect to monitor / adjust rotation
        bindsym m exec '/home/ericshen/bin/fixm'
        bindsym Shift+h exec '/home/ericshen/bin/fixm' -rot left
        bindsym Shift+j exec '/home/ericshen/bin/fixm' -rot inverted
        bindsym Shift+k exec '/home/ericshen/bin/fixm' -rot normal
        bindsym Shift+l exec '/home/ericshen/bin/fixm' -rot right

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+m mode "default"
}
bindsym $mod+m mode "move"

