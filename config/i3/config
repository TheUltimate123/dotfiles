# Use custom script to adjust brightness
# (originally developed since xbacklight doesn't work on macbook, but it's tiny and it works so I stuck with it)
bindsym XF86MonBrightnessUp exec /usr/local/bin/bright -inc 1000 \
            && pkill -RTMIN+10 i3blocks
bindsym XF86MonBrightnessDown exec /usr/local/bin/bright -dec 1000 \
            && pkill -RTMIN+10 i3blocks
