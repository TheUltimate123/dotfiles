    \def\vontestenv{\@ifstar\@vontestenvstar\@vontestenv}
    \newcommand{\@vontestenv}[2]{\begin{#2} \voninclude{#1} \end{#2}}
    \newcommand{\@vontestenvstar}[2]{\begin{#2} $(*)$ \voninclude{#1} \end{#2}}

% \von
